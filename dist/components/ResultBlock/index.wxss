.block {
  display: flex;
  flex: 1;
  margin: 0 20px;
}

.box__wrapper {
  position: relative;
  margin-top: 40px;
  border-radius: 10px;
  padding: 20px;
  border: 1px solid #e5e5e5;
  flex-direction: column;
}

.box__title {
  display: flex;
  align-items: center;
  position: absolute;
  left: 50%;
  top: 0;
  background: white;
  transform: translate(-50%, -50%);
  padding: 0 10px;
  font-weight: bold;
}

.result-block__title-img {
  width: 24px;
  height: 24px;
  margin-right: 5px;
  margin-left: -5px;
}

.result-block__goods-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 15px;
  background-color: #f6f6f6;
  padding: 10px;
  border-radius: 5px;
  margin-top: 15px;
}

.result-block__goods-image {
  width: 80px;
  height: 80px;
}

.result-block__goods-side {
  margin-left: 10px;
}

.result-block__goods-2nd-title {
  font-size: 12px;
  color: #b2b2b2;
}

.result-block__result {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}

.result-block__lucky-code {
  height: 50px;
  width: 74px;
}

.result-block__result-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}