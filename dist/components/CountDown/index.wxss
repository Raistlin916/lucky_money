.block {
  display: flex;
  flex: 1;
  margin: 0 20px;
  text-align: center;
}

.box__wrapper {
  position: relative;
  margin-top: 40px;
  border-radius: 10px;
  padding: 20px;
  border: 1px solid #e5e5e5;
  flex-direction: column;
}

.box__title {
  display: flex;
  align-items: center;
  position: absolute;
  left: 50%;
  top: 0;
  background: white;
  transform: translate(-50%, -50%);
  padding: 0 10px;
  font-weight: bold;
}

.countdown__title {
  font-size: 14px;
}

.countdown__desc {
  font-size: 12px;
  color: #666;
}